@model TARge21Shop.Models.Car.CarEditViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Type" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="HorsePower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="HorsePower" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Weight" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuiltDate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastMaintenance" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastMaintenance" class="form-control" />
            </div>
        </div>
        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="Update" asp-controller="cars" type="submit" class=" btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="add" asp-controller="cars" type="submit" class=" btn btn-primary" value="Add" />
        }

        <a asp-action="index" class="btn btn-primary">Back</a>
    </form>
</div>
