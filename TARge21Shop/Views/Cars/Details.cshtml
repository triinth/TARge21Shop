@model TARge21Shop.Models.Car.CarDetailsViewModel


<h1>Details</h1>

<div>
	<h4>Cars</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Id)
		</div>

		<div class="form-group row">
			<label asp-for="Brand" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Brand)
		</div>

		<div class="form-group row">
			<label asp-for="Model" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Model)
		</div>

		<div class="form-group row">
			<label asp-for="Color" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Color)
		</div>

		<div class="form-group row">
			<label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.FuelType)
		</div>

		<div class="form-group row">
			<label asp-for="Price" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Price)
		</div>


		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EnginePower)
		</div>

		<div class="form-group row">
			<label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Mileage)
		</div>

		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.BuiltDate)
		</div>

		<div class="form-group row">
			<label asp-for="MaintanceDate" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.MaintanceDate)
		</div>
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.CreatedAt)
		</div>

		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ModifiedAt)
		</div>

		@foreach (var images in Model.Image)
		{
			<partial name="_Images" model="images" />
		}
	</dl>
	<a asp-action="Index" asp-controller="cars" class="btn btn-danger">Back</a>
</div>